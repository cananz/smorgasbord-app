<div class="padding">

</div>

<% if @error %>
<p><%= @error %></p>
<% end %>

<!-- Login form to check username & password against database -->

<%= form_tag(login_path, method: 'post') do %>
  <%= label_tag(:username, "Username: ") %>
  <%= text_field_tag(:username) %>
  <%= label_tag(:password, "Password : ") %>
  <%= password_field_tag(:password) %>
  <div class="padding"></div>
  <!-- <div class="class:"ui blue button""></div> -->
  <%= submit_tag("Log In", class:"ui blue button") %>
<% end %>
