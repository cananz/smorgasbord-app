<h2><%= "#{current_user.first_name}'s Kitchen" %></h2>

<!-- List all of user's current items -->
<% if current_user.ingredients.count > 0 %>
  <ul>
    <% current_user.user_ingredients.each do |ing| %>
      <li><%= ing.ingredient.name %> -- <%= ing.relationship %></li>
    <% end %>
  </ul>
<!-- If user has no items -->
<% else %>
  <p>Time to hit the grocery store! Your kitchen is empty.</p>
<% end %>

<!-- Link to edit current items -->
<div>
  <p><%= link_to "Need to update your kitchen?", edit_user_path(current_user) %>.</p>
</div>

