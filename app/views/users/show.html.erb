<h2><%= "#{current_user.first_name}'s Kitchen" %></h2>

<!-- List all of user's current items -->
<% if current_user.in_kitchen.count > 0 %>
  <ul>
    <% current_user.in_kitchen.each do |ing| %>
      <li><%= ing.name %></li>
    <% end %>
  </ul>
<!-- If user has no items -->
<% else %>
  <p>Time to hit the grocery store! Your kitchen is empty.</p>
<% end %>

<!-- Link to edit current items -->
<div>
  <% if current_user.kitchens.count == 0 %><p><%= link_to "Stock your kitchen!", new_kitchen_path %>.</p>
  <% else %><p><%= link_to "Need to update your kitchen?", edit_kitchen_path %>.</p>
  <% end %>
</div>

