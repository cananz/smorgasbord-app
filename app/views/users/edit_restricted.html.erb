<h1><%= "#{current_user.first_name}'s Dietary Restrictions" %></h1>


<%= form_for current_user, url: edit_restricted_path, action: 'patch' do |f| %>

<%= f.collection_check_boxes(:ingredient_ids, Ingredient.category_sort, :id, :name) do |ing| %>

<div>

  <%= ing.check_box checked: current_user.restricted_ings.include?(ing.object) %><%= ing.label { ing.text } %>
</div>
<% end %>
<%= f.submit %>
<% end %>
